<ui:UiWindow x:Class="KazanNewShop.View.Windows.PersonalSalesmanPageWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:KazanNewShop.ViewModel"
             mc:Ignorable="d"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             ExtendsContentIntoTitleBar="True"
             WindowCornerPreference="RoundSmall"
             WindowStartupLocation="CenterScreen"
             x:Name="Root"
             Height="600"
             Width="400">

    <Window.Resources>
        <ResourceDictionary Source="/Resources/TextBlockStyle.xaml"/>
    </Window.Resources>

    <Window.DataContext>
        <local:PersonalSalesmanPageWindowVM/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Title="Личная страница"/>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">

            <Image Source="{Binding DataContext.Photo,
                            ElementName=Root}"
                   Grid.Row="0"
                   Opacity="0.8"
                   Panel.ZIndex="2"
                   Height="150"
                   Margin="10 0 0 0"
                   Width="150"
                   Stretch="Fill"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center">
                <Image.InputBindings>
                    <MouseBinding Gesture="LeftClick"
                                  Command="{Binding DataContext.EditUserPhotoCommand,
                                            ElementName=Root,
                                            UpdateSourceTrigger=PropertyChanged}"/>
                </Image.InputBindings>
                <Image.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,150,150"/>
                </Image.Clip>
            </Image>
            
            <TextBlock Text="Название компании*"
                       Margin="0 0 0 5"/>
            <TextBox x:Name="NameCompany"
                     Text="{Binding DataContext.NameCompany,
                            ElementName=Root,
                            UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxCustomStyle}"/>

            <TextBlock Text="Описание*"
                       Margin="0 0 0 5"/>
            <TextBox x:Name="Description"
                     Text="{Binding DataContext.Description,
                            ElementName=Root,
                            UpdateSourceTrigger=PropertyChanged}"
                     MinHeight="100"
                     Style="{StaticResource TextBoxCustomStyle}"/>

            <TextBlock Text="Дата создание компании*"
                       Margin="0 0 0 5"/>
            <DatePicker x:Name="DateOnMarketplace"
                        Text="{Binding DataContext.DateOnMarketplace,
                               ElementName=Root,
                               UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource DatePickerCustomStyle}"/>

            <StackPanel Orientation="Horizontal"
                        Margin="0 20 0 0">
                <Border CornerRadius="10"
                        DockPanel.Dock="Right"
                        Grid.Column="2"
                        Background="#772837"
                        VerticalAlignment="Center"
                        Margin="0 0 20 0"
                        HorizontalAlignment="Right">

                    <Button Padding="10 10 10 10"
                        Command="{Binding DataContext.LogoutCommand,
                                  ElementName=Root,
                                  UpdateSourceTrigger=PropertyChanged}">
                        <StackPanel Orientation="Horizontal">

                            <fa:ImageAwesome Icon="Close"
                                             Width="20"
                                             Foreground="#ded8d7"/>

                            <TextBlock Text="Выйти"
                                       Margin="10 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Border.InputBindings>
                        <MouseBinding Gesture="LeftClick"
                                      Command="{Binding DataContext.LogoutCommand,
                                                ElementName=Root,
                                                UpdateSourceTrigger=PropertyChanged}"/>
                    </Border.InputBindings>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#464649"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>

                <Border CornerRadius="10"
                        Grid.Column="2"
                        Background="#272837"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                    <Button Padding="10 10 10 10"
                            Command="{Binding DataContext.SaveChangesCommand,
                                      ElementName=Root,
                                      UpdateSourceTrigger=PropertyChanged}">
                        <StackPanel Orientation="Horizontal">

                            <fa:ImageAwesome Icon="Check"
                                             Width="20"
                                             Foreground="#ded8d7"/>

                            <TextBlock Text="Сохранить"
                                       Margin="10 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Border.InputBindings>
                        <MouseBinding Gesture="LeftClick"
                                      Command="{Binding DataContext.SaveChangesCommand,
                                                ElementName=Root,
                                                UpdateSourceTrigger=PropertyChanged}"/>
                    </Border.InputBindings>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#464649"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:UiWindow>
